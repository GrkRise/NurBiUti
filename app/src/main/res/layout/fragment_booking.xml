<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cloud="http://schemas.android.com/apk/res-auto"
    tools:context="com.rizzhivaykini.nurbiuti.Fragments.BookingFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Услуги"
            android:padding="16dp"/>

        <com.dpizarro.autolabel.library.AutoLabelUI
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clouds"
            android:layout_marginBottom="10dp"
            />


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_cloud"
            android:src="@android:drawable/ic_input_add"
            android:tint="@color/colorAccent"
            android:padding="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Добавить услугу"/>

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"/>

        <TimePicker
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:timePickerMode="clock"
            android:id="@+id/time"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:hint="Имя"
                android:textColorHighlight="@color/colorAccent"
                android:inputType="textPersonName"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:hint="Фамилия"
                android:textColorHighlight="@color/colorAccent"
                android:inputType="textPersonName"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:hint="Телефон"
                android:id="@+id/phone"
                android:inputType="phone"
                android:freezesText="true"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:hint="Комментарий"
                android:textColorHighlight="@color/colorAccent"
                android:inputType="textMultiLine"
                android:lines="5"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorPrimary"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оформить"
            android:tint="@color/colorAccent"
            android:padding="16dp"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorPrimary"
            />

    </LinearLayout>

</ScrollView>






